\newacronym{maf}{MAF}{minor allele frequency}

\newacronym{mds}{MDS plot}{Metric multidimensional scaling plot, also the plot of the first two principal coordinate axes, e.g. from a dissimilartiy matrix (from \citep{And2006})}

\newglossaryentry{model}{
  name={model},
  description={
    small-sized replica of a prototype.
  }
}

\newglossaryentry{motu}{
  name={MOTUs},
  description={
    molecular operational taxonomic units
  }
}

\newglossaryentry{functionalTrait}{
  name={Functional Traits},
  description={
    morphological and physiological
    traits that are indicative of the ecological strategies of 
    species
  }
}



\newglossaryentry{neutralMeasures}{
  name={neutral measures of diversity},
  description={
    traditional diversity indices assume all types 
    (units of measure) are independent, i.e.\ ``discrete 
    elements with no correlation among them.''
  }
}

\newglossaryentry{prototype}{
  name={prototype},
  description={
    full-size system produced using physical modelling
  }
}

\newglossaryentry{taxocene}{
  name={taxocene},
  description={
    a set of species belonging to a given 
    supraspecific taxon that makes up a natural ecological community 
    or, in other words, that represent a taxonomic segment of a 
    community or association
  }
}

\newglossaryentry{relatedness}{
  name={relatedness},
  description={
    The identity-by-descent (IDB) of homologous alleles
    between individuals. 
    If the pedigree of individuals is unknown, 
    relationship may e etimated with 
    genetic markers \citep{Ritland1996}.
  }
}

\newglossaryentry{inbreeding}{
  name={inbreeding},
  description={
    The identity-by-descent (IDB) of homologous alleles
    within individuals.
    If the pedigree of individuals is unknown, 
    relationship may e etimated with 
    genetic markers \citep{Ritland1996}.
  }
}

\newacronym{ibd}{IBD}{Identity By Descent}
\newacronym{ibs}{IBS}{Identity By State}

\newacronym{blup}{BLUP}{Best Linear Unbiased Prediction}

\newacronym{abc}{ABC}{Abundance-Biomas Comparison curve}
\newacronym{sad}{SAD}{Species Abundance Distribution curve}



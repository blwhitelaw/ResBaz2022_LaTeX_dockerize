\newglossaryentry{deme}{
  name={deme},
  description={
    a local group of individuals that interbreed with each other
  }
}

\newglossaryentry{bdiversity}{
  name={$\beta$ diversity},
  description={
    ``generally defined as variation in the identities of species among sites, provides a direct link between biodiversity at local scales ($\alpha$ diversity) and the broader regional species pool ($\gamma$ diversity)'' \citep{AndCri2011}.
  }
}

\newglossaryentry{allelicDifferentiation}{
  name={allelic differentiation},
  description={
    The aspect of population structure relating to WRight's ``absolute idfferentiation.''
    This is differentiation ``in the sense implied in the extreme case by the absense of any common allele.''
  }
}


\newglossaryentry{hillnums}{
  name={Hill numbers},
  description={
    General statistical framework for partitioning and 
    comparing genetic diversity.
    %Framework that unify and generalize popular indices, and encompasses
    %the group of diversity measures that quantify diversity in units of 
    %equivalent numbers of equally abundant OTUs
  }
}

\newglossaryentry{JostD}{
  name={Jost's D},
  description={
    a heterozygosity-based measure which was introduced to genetics from ecology to describe allelic differentiation.
  }
}


